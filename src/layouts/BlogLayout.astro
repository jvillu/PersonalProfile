---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "AI-First Azure Cloud Expert | Javier Villullas" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/svg+xml" sizes="16x16" href="/favicon-16x16.svg" />
    <link rel="icon" type="image/svg+xml" sizes="32x32" href="/favicon-32x32.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.svg" />
      <title>{title}</title>
    <link href="https://cdn.tailwindcss.com" rel="stylesheet">    <style>      /* Force dark blue background with animation - Always dark blues */
      .hero-section-override {
        background: #1e293b !important;
        position: relative !important;
        z-index: 1 !important;
      }
      
      .hero-section-override::before,
      .hero-section-override::after {
        display: none !important;
      }
      
      .hero-section-override * {
        position: relative;
        z-index: 2;
      }
      
      /* Custom gradients with animation - Ultra dark version for maximum contrast */
      .gradient-bg-blue-animated {
        background: linear-gradient(135deg, #000000, #1a1a2e, #16213e, #000000);
        background-size: 400% 400%;
        animation: gradientShift 8s ease infinite;
      }
      
      @keyframes gradientShift {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }
      
      .gradient-text-blue {
        background: linear-gradient(to right, #dbeafe, #ffffff);
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        color: transparent;
      }
      
      /* Custom animations */
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      .animate-fade-in {
        animation: fadeIn 0.8s ease-out forwards;
      }
      @keyframes floatSlow {
        0% { transform: translateY(0); }
        50% { transform: translateY(30px); }
        100% { transform: translateY(0); }
      }
      @keyframes floatFast {
        0% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
        100% { transform: translateY(0); }
      }
      .animate-float-slow { animation: floatSlow 10s ease-in-out infinite; }
      .animate-float-fast { animation: floatFast 6s ease-in-out infinite; }
      
      /* Smooth scrolling */
      html {
        scroll-behavior: smooth;
      }
        /* Custom gradient text */
      .gradient-text {
        background: linear-gradient(135deg, #3b82f6, #1d4ed8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      /* Glass effect */
      .glass {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }

      /* Mobile menu animations */
      @keyframes slideDown {
        from { 
          opacity: 0; 
          transform: translateY(-10px); 
        }
        to { 
          opacity: 1; 
          transform: translateY(0); 
        }
      }
      
      #mobile-menu-blog:not(.hidden),
      #mobile-menu-blog-es:not(.hidden),
      #mobile-menu-post:not(.hidden),
      #mobile-menu-post-es:not(.hidden) {
        animation: slideDown 0.3s ease-out forwards;
      }
        /* Mobile optimizations */
      @media (max-width: 768px) {
        .container {
          padding-left: 1rem;
          padding-right: 1rem;
        }
        
        /* Ensure proper spacing on mobile */
        main {
          padding-top: 0;
        }
        
        /* Mobile header adjustments */
        header {
          position: sticky;
          top: 0;
          z-index: 50;
        }
        
        /* Mobile text sizing */
        .hero-title {
          font-size: 2rem;
          line-height: 1.2;
        }
        
        .hero-subtitle {
          font-size: 1rem;
          line-height: 1.5;
        }
        
        /* Mobile menu overlay */
        #mobile-menu-blog,
        #mobile-menu-blog-es,
        #mobile-menu-post,
        #mobile-menu-post-es {
          z-index: 60;
        }
        
        /* Better mobile spacing */
        section {
          padding-left: 1rem;
          padding-right: 1rem;
        }
        
        /* Prevent horizontal scroll */
        body {
          overflow-x: hidden;
        }
      }
      
      /* Prevent layout shifts */
      * {
        box-sizing: border-box;
      }
      
      /* Better mobile touch targets */
      @media (max-width: 768px) {
        button, a {
          min-height: 44px;
          min-width: 44px;
          display: flex;
          align-items: center;
          justify-content: center;
        }
        
        /* Mobile navigation fixes */
        .mobile-nav-link {
          padding: 12px 16px;
          display: block;
          text-decoration: none;
        }
      }
      #mobile-menu-post-es:not(.hidden) {
        animation: slideDown 0.3s ease-out forwards;
      }
      
      /* Responsive padding for mobile */
      @media (max-width: 768px) {
        .container {
          padding-left: 1rem;
          padding-right: 1rem;
        }
      }
      
      /* Touch targets for mobile */
      @media (max-width: 768px) {
        #mobile-menu-blog a,
        #mobile-menu-blog-es a,
        #mobile-menu-post a,
        #mobile-menu-post-es a {
          min-height: 44px;
          display: flex;
          align-items: center;
        }
      }
    </style>
  </head>
  <body class="font-sans text-gray-800 bg-transparent">
    <main>
      <slot />
    </main>
    <footer class="py-8 bg-gray-900 text-white text-center text-sm">
      <p> 2025 Javier Villullas. </p>
    </footer>
  </body>
</html>
